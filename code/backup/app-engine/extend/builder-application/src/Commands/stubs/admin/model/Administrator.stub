<?php

namespace $MODULE_NAMESPACE$\$STUDLY_NAME$\Models\Admin;

use Builder\Source\Admin\Traits\HasDateTimeFormatter;
use Builder\Source\Admin\Traits\HasPermissions;
use Illuminate\Auth\Authenticatable;
use Illuminate\Contracts\Auth\Authenticatable as AuthenticatableContract;
use Illuminate\Database\Eloquent\Model;
use Illuminate\Database\Eloquent\Relations\BelongsToMany;
use Illuminate\Support\Facades\Storage;
use Illuminate\Support\Facades\URL;

/**
 * Class Administrator.
 *
 * @property Role[] $roles
 */
class Administrator extends Model implements AuthenticatableContract
{
    use Authenticatable,
        HasPermissions,
        HasDateTimeFormatter;

    const DEFAULT_ID = 1;

    protected $fillable = ['username', 'password', 'name', 'avatar'];

    /**
     * Create a new Eloquent model instance.
     *
     * @param array $attributes
     */
    public function __construct(array $attributes = [])
    {
        $connection = config('source-$LOWER_NAME$-admin.database.connection') ?: config('database.default');

        $this->setConnection($connection);

        $this->setTable(config('source-$LOWER_NAME$-admin.database.users_table'));

        parent::__construct($attributes);
    }

    /**
     * Get avatar attribute.
     *
     * @return mixed|string
     */
    public function getAvatar()
    {
        $avatar = $this->avatar;

        if ($avatar) {
            if (! URL::isValidUrl($avatar)) {
                $avatar = Storage::disk(config('source-$LOWER_NAME$-admin.upload.disk'))->url($avatar);
            }

            return $avatar;
        }

        return admin_asset(config('source-$LOWER_NAME$-admin.default_avatar') ?: '@admin/images/default-avatar.jpg');
    }

    /**
     * A user has and belongs to many roles.
     *
     * @return BelongsToMany
     */
    public function roles(): BelongsToMany
    {
        $pivotTable = config('source-$LOWER_NAME$-admin.database.role_users_table');

        $relatedModel = config('source-$LOWER_NAME$-admin.database.roles_model');

        return $this->belongsToMany($relatedModel, $pivotTable, 'user_id', 'role_id');
    }

        /**
         * Detach models from the relationship.
         *
         * @return void
         */
        protected static function boot()
        {
            parent::boot();

            static::saving(function ($model) {
                $model->website_id = \Modules\Core\Support\Facades\Website::id();
            });
        }
}
